<div class="ui container">
    <h1>Personal Info</h1>
    <table class="ui horizon celled table">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>User Operation</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td data-label="Name">{{user.email}}</td>
                <td data-label="Name">{{user.firstName}}</td>
                <td data-label="Name">{{user.lastName}}</td>
                <td data-label="Name">{{user.address}}</td>
                <td data-label="Name">{{user.city}}</td>
                <td data-label="Name">{{user.state}}</td>
                <td>
                    <a href="/userUpdate" class="ui mini basic teal button">Update</a>
                    <a href="/userDelete" class="ui mini basic red button">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>


<div class="m-container-small m-padded-tb-big">
    <div class="ui container">
        <h1>Owned Game</h1>
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Genre</th>
                    <th>Platform</th>
                    <th>Updated Time </th>
                    <th>Game Operation</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>CyberPunk2077</td>
                    <td>RPG</td>
                    <td>PS5</td>
                    <td>2020-12-09 19:00</td>
                    <td>
                        <a href="#" class="ui mini basic teal button">Sell</a>
                        <a href="#" class="ui mini basic teal button">Borrow</a>
                        <a href="#" class="ui mini basic red button">Delete</a>
                    </td>
                </tr>
                {{#each ownedgames}} 
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.genre}}</td>
                    <td>{{this.platform}}</td>
                    <td>{{this.releaseDate}}</td>
                    <td>
                        <a href="#" class="ui mini basic teal button">Sell</a>
                        <a href="#" class="ui mini basic teal button">Borrow</a>
                        <a href="/private/deleteGame/{{this._id}}" class="ui mini basic red button">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="6">
                        <a href="/private/addGame" class="ui right floated mini teal basic button">Add</a>
                    </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


